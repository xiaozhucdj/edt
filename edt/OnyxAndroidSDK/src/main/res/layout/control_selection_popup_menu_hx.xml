<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selection_popup_menu_background">

    <LinearLayout
        android:id="@+id/function_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/imagebutton_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/reader_menu_item_background"
            android:clickable="true"
            android:text="@android:string/copy"
            android:layout_marginLeft="2dp"
            android:ellipsize="middle"
            android:gravity="center"
            android:lines="2"
            android:textSize="@dimen/control_panel_floating_button_name_text_size"
            android:orientation="horizontal" />

        <View
            android:layout_width="3dp"
            style="@style/single_line_Y_axis_View" />

        <TextView
            android:id="@+id/imagebutton_highlight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/reader_menu_item_background"
            android:clickable="true"
            android:text="@string/HighlightHx"
            android:layout_marginLeft="2dp"
            android:ellipsize="middle"
            android:gravity="center"
            android:lines="2"
            android:textSize="@dimen/control_panel_floating_button_name_text_size"
            android:orientation="horizontal" />

        <View
            android:layout_width="3dp"
            style="@style/single_line_Y_axis_View" />

        <TextView
            android:id="@+id/imagebutton_annotaion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/reader_menu_item_background"
            android:clickable="true"
            android:text="@string/AnnotationHx"
            android:layout_marginLeft="2dp"
            android:ellipsize="middle"
            android:gravity="center"
            android:lines="2"
            android:textSize="@dimen/control_panel_floating_button_name_text_size"
            android:orientation="horizontal" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_below="@id/function_panel"
        style="@style/single_line_X_axis_View"
        android:layout_height="2dp" />

    <EditText
        android:id="@+id/content_text"
        android:layout_below="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_margin="5dp" />

    <LinearLayout
        android:layout_below="@id/content_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_cancel"
            android:text="@android:string/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="65dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_ok"
            android:text="@android:string/ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="65dp"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>
