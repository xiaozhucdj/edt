<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@android:color/white"
    >
     <ImageView
        android:id="@+id/imageview_detail_gridview_item_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/title"
        android:src="@drawable/unknown_application" 
        android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/textview_detail_gridview_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/unknown"
            android:textColor="@android:color/black"
            android:textStyle="bold" 
            android:layout_toRightOf="@id/imageview_detail_gridview_item_cover"
            android:layout_centerVertical="true"/>
</RelativeLayout>