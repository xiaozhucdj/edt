<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_reader_pages_seekbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/button_previous_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/reader_menu_item_background"
            android:contentDescription="@drawable/toolbar_backward"
            android:scaleType="fitCenter"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/toolbar_backward" />

        <ImageButton
            android:id="@+id/button_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/reader_menu_item_background"
            android:contentDescription="@drawable/prev"
            android:scaleType="fitCenter"
            android:src="@drawable/prev" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview_currentpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:focusable="true"
                android:lines="1"
                android:gravity="center_vertical"
                android:minWidth="@dimen/dialog_reader_page_seekbar_page_min_width"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textSize="@dimen/dialog_reader_page_seekbar_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/slash"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dialog_reader_page_seekbar_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_allpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:textSize="@dimen/dialog_reader_page_seekbar_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/reader_menu_item_background"
            android:contentDescription="@drawable/next"
            android:scaleType="fitCenter"
            android:src="@drawable/next" />

        <ImageButton
            android:id="@+id/button_next_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/reader_menu_item_background"
            android:contentDescription="@drawable/toolbar_forward"
            android:scaleType="fitCenter"
            android:src="@drawable/toolbar_forward" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/black" />

    <SeekBar
        android:id="@+id/seekbar_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:thumb="@drawable/seek_thumb" />

</LinearLayout>