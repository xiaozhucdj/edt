<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dialog_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:minWidth="@dimen/dialog_settings_selection_template_width">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/imageView_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_more" />

        <TextView
            android:id="@+id/textView_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView_tittle"
            android:layout_alignTop="@id/imageView_tittle"
            android:layout_toRightOf="@id/imageView_tittle"
            android:paddingRight="48dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/dialog_title_text_size" />
    </RelativeLayout>

    <View
        android:layout_height="2dp"
        style="@style/single_line_X_axis_View" />

    <TextView
        android:id="@+id/textView_message"
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/primary_text_light"
        android:textAppearance="@android:style/TextAppearance.Large"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@android:string/cancel"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Button
            android:id="@+id/button_ok"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/delete"
            android:textAppearance="@android:style/TextAppearance.Large" />
    </LinearLayout>
</LinearLayout>
