<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selection_popup_menu_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_dict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/dict_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:singleLine="true"
                android:ellipsize="middle"
                android:text="@string/dialog_dictionary_title"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/control_panel_floating_tittle_text_size" />

            <ImageView
                android:id="@+id/button_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_dialog_close"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/imagebtn_bg"
                />

            <ImageView
                android:id="@+id/dict_next_page"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/button_close"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/hint"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/dic_downward"
                android:visibility="gone" />

            <TextView
                android:id="@+id/page_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/dict_next_page"
                android:text="@string/dialog_dictionary_page"
                android:textColor="@android:color/black"
                android:textSize="@dimen/control_panel_floating_tittle_text_size"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dict_prev_page"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/page_indicator"
                android:contentDescription="@string/hint"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/dic_upward"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ff000000" />

        <com.onyx.android.sdk.ui.util.HTMLReaderWebView
            android:id="@+id/explain"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="2dp" />

        <View
            style="@style/single_line_X_axis_View"
            android:layout_height="2dp" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroupSelectionMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="8dp"

        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:text="@string/selection_mode"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/control_panel_floating_button_name_text_size" />

        <RadioButton
            android:id="@+id/radioIntelligent"
            style="@style/radiobutton_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intelligent"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="@dimen/control_panel_floating_button_name_text_size"
            android:drawablePadding="5dip"
             />

        <RadioButton
            android:id="@+id/radioPrecise"
            style="@style/radiobutton_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/precise"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="@dimen/control_panel_floating_button_name_text_size"
            android:drawablePadding="5dip"
             />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ff000000" />

    <LinearLayout
        android:id="@+id/tools_plate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/imagebutton_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/reader_menu_item_background"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:contentDescription="@drawable/selection_copy_default"
                android:src="@drawable/selection_copy_default" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:lines="2"
                android:text="@string/Copy"
                android:textStyle="bold"
                android:textSize="@dimen/control_panel_floating_button_name_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_copy_right"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/imagebutton_highlight"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/reader_menu_item_background"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:contentDescription="@drawable/selection_annotation_default"
                android:src="@drawable/selection_highlight_default" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:lines="2"
                android:text="@string/Highlight"
                android:textStyle="bold"
                android:textSize="@dimen/control_panel_floating_button_name_text_size" />
        </LinearLayout>

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/imagebutton_annotaion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/reader_menu_item_background"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_annotation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:contentDescription="@drawable/selection_annotation_default"
                android:src="@drawable/selection_annotation_default" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:lines="2"
                android:text="@string/Annotation"
                android:textStyle="bold"
                android:textSize="@dimen/control_panel_floating_button_name_text_size" />
        </LinearLayout>

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/imagebutton_dict"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/reader_menu_item_background"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_translate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:contentDescription="@drawable/selection_translate_default"
                android:src="@drawable/selection_translate_default" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:lines="2"
                android:text="@string/Dictionary"
                android:textStyle="bold"
                android:textSize="@dimen/control_panel_floating_button_name_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_start_tts_separator"
            android:layout_width="3dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/layout_start_tts_from_selection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/reader_menu_item_background"
            android:clickable="true"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_start_tts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:contentDescription="@drawable/tts"
                android:src="@drawable/tts" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:lines="2"
                android:text="@string/start_tts"
                android:textStyle="bold"
                android:textSize="@dimen/control_panel_floating_button_name_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
