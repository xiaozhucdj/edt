<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/read_menu_item_background_color"
        android:contentDescription="@drawable/unknown_application"
        android:scaleType="fitCenter"
        android:src="@drawable/unknown_application" />

    <View
        android:id="@+id/anchor_view"
        android:visibility="invisible"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:layout_centerHorizontal="true"
        android:id="@+id/checkbox_current_select"
        android:button="@drawable/custom_btn_radio"
        android:layout_alignLeft="@+id/anchor_view"
        android:layout_alignRight="@+id/anchor_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_icon"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:focusable="false"
        android:visibility="invisible" />
</RelativeLayout>