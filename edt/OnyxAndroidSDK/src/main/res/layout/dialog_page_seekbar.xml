<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_pages_seekbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    android:background="@android:color/white">

    <View
        android:id="@+id/tv_line"
        style="@style/single_line_X_axis_View"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar_page"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_currentpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_background"
            android:lines="1"
            android:singleLine="true"
            android:minWidth="48dp"
            android:gravity="center_vertical|right"
            android:minHeight="36dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:textSize="@dimen/page_seekbar_progress_text_size"
            android:textStyle="bold"
            android:focusable="true" />
	
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/slash"
            android:textColor="@android:color/black"
            android:textSize="@dimen/page_seekbar_progress_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_allpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/page_seekbar_progress_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekbar_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:focusable="false"
        android:layout_below="@+id/tv_line"
        android:thumb="@drawable/seek_thumb" />

</RelativeLayout>