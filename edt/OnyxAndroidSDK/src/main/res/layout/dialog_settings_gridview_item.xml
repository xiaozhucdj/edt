<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageview_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/black_circle"
        android:contentDescription="@drawable/black_circle" />

    <TextView
        android:id="@+id/textview_gridview_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/imageview_circle"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dialog_content_text_size" />

</RelativeLayout>