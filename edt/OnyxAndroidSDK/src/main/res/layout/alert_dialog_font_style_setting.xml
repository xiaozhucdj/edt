<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alert_dialog_font_style_setting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/font_size_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/font_size_layout_height"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <com.onyx.android.sdk.ui.AlignTextView
            android:id="@+id/text_view_font_size_0"
            style="@style/fontSize_textView_style"
            app:lastLineDescent="12dp" />

        <com.onyx.android.sdk.ui.AlignTextView
            android:id="@+id/text_view_font_size_1"
            style="@style/fontSize_textView_style"
            app:lastLineDescent="12dp" />

        <com.onyx.android.sdk.ui.AlignTextView
            android:id="@+id/text_view_font_size_2"
            style="@style/fontSize_textView_style"
            app:lastLineDescent="12dp" />

        <com.onyx.android.sdk.ui.AlignTextView
            android:id="@+id/text_view_font_size_3"
            style="@style/fontSize_textView_style"
            app:lastLineDescent="12dp" />

        <com.onyx.android.sdk.ui.AlignTextView
            android:id="@+id/text_view_font_size_4"
            style="@style/fontSize_textView_style"
            app:lastLineDescent="12dp" />

        <ImageView
            android:id="@+id/imageView_MinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/imagebtn_bg"
            android:focusable="true"
            android:src="@drawable/light_down" />

        <ImageView
            android:id="@+id/imageView_AddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/font_size_button_margin"
            android:background="@drawable/imagebtn_bg"
            android:focusable="true"
            android:src="@drawable/light_add" />


    </LinearLayout>

    <View
        style="@style/single_line_X_axis_View"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:id="@+id/font_indent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/font_face"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_font_style_icon_layout_height">

                <Button
                    android:id="@+id/button_font_face"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_font_face_box"
                    android:ellipsize="middle"
                    android:focusable="true"
                    android:gravity="center"
                    android:minHeight="35dp"
                    android:paddingRight="@dimen/font_face_button_right_padding"
                    android:singleLine="true"
                    android:textSize="18sp" />
            </RelativeLayout>

        </LinearLayout>

        <View
            style="@style/single_line_Y_axis_View"
            android:layout_width="1dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/menu_item_indent"
                android:textStyle="bold" />

            <com.onyx.android.sdk.ui.ContentView
                android:id="@+id/indent_contentView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_font_style_icon_layout_height" />
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/single_line_X_axis_View"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/line_spacing_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/menu_item_line_spacing"
                android:textStyle="bold" />

            <com.onyx.android.sdk.ui.ContentView
                android:id="@+id/line_spacing_contentView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_font_style_icon_layout_height" />
        </LinearLayout>

        <View
            style="@style/single_line_Y_axis_View"
            android:layout_width="1dp" />

        <LinearLayout
            android:id="@+id/page_margin_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/page_margins"
                android:textStyle="bold" />

            <com.onyx.android.sdk.ui.ContentView
                android:id="@+id/page_margin_contentView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_font_style_icon_layout_height" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>