<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/layout_font_increase"
        android:layout_width="@dimen/reader_menu_item_width"
        android:layout_height="match_parent"
        android:background="@drawable/reader_menu_item_background"
        android:focusable="true" >

        <TextView
            android:id="@+id/textview_font_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/menu_item_font_increase"
            android:textSize="@dimen/dialog_reader_menu_textsize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/textview_font_increase"
            android:layout_centerHorizontal="true"
            android:background="@color/read_menu_item_background_color"
            android:contentDescription="@drawable/font_increase"
            android:src="@drawable/font_increase" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_font_decrease"
        android:layout_width="@dimen/reader_menu_item_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@drawable/reader_menu_item_background"
        android:focusable="true" >

        <TextView
            android:id="@+id/textview_font_decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/menu_item_font_decrease"
            android:textSize="@dimen/dialog_reader_menu_textsize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/textview_font_decrease"
            android:layout_centerHorizontal="true"
            android:background="@color/read_menu_item_background_color"
            android:contentDescription="@drawable/font_decrease"
            android:src="@drawable/font_decrease" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_smart_reflow"
        android:layout_width="@dimen/reader_menu_item_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:background="@drawable/reader_menu_item_background"
        android:focusable="true"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textview_smart_reflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/menu_item_smart_reflow"
            android:singleLine="true"
            android:textSize="@dimen/dialog_reader_menu_textsize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/textview_smart_reflow"
            android:layout_centerHorizontal="true"
            android:background="@color/read_menu_item_background_color"
            android:contentDescription="@drawable/font_type"
            android:src="@drawable/font_type" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_font_embolden"
        android:layout_width="@dimen/reader_menu_item_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@drawable/reader_menu_item_background"
        android:focusable="true" >

        <TextView
            android:id="@+id/textview_font_embolden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/menu_item_font_bold"
            android:textSize="@dimen/dialog_reader_menu_textsize" />

        <ImageView
            android:id="@+id/imageview_font_embolden_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/textview_font_embolden"
            android:layout_centerHorizontal="true"
            android:background="@color/read_menu_item_background_color"
            android:contentDescription="@drawable/font_embolden"
            android:src="@drawable/font_embolden" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_font_type"
        android:layout_width="@dimen/reader_menu_item_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@drawable/reader_menu_item_background" >

        <TextView
            android:id="@+id/textview_font_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/menu_item_font_type"
            android:textSize="@dimen/dialog_reader_menu_textsize_smallest" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/textview_font_type"
            android:layout_centerHorizontal="true"
            android:background="@color/read_menu_item_background_color"
            android:contentDescription="@drawable/ic_font_child"
            android:src="@drawable/font_type" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_font_face"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/reader_menu_item_background"
        android:focusable="true"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/button_font_face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_font_face_box"
            android:ellipsize="end"
            android:focusable="true"
            android:minHeight="35dp"
            android:paddingRight="50dp"
            android:singleLine="true"
            android:textSize="18sp"
            android:clickable="false"
            />
    </RelativeLayout>

</LinearLayout>