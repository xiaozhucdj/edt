<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--title_bar-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="16px">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="30px"
                android:layout_height="30px"
                android:onClick="onBack"
                android:src="@drawable/le_btn_back_new_selector" />

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="xx问答"
                android:textColor="@color/shop_text_black_333333"
                android:textSize="28px" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="12px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="12px"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/all_chapter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onBack"
                android:text="全部章节    >>"
                android:textColor="#000"
                android:textSize="22px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/current_chapter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/all_chapter_btn"
                android:text="1.x.x集合的xxxxxxxx"
                android:textColor="#000"
                android:textSize="22px" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#666666" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1">

            <com.yougy.anwser.ContentDisplayer
                android:id="@+id/content_displayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30px"
                android:layout_weight="1"

                android:paddingBottom="15px"
                android:paddingTop="15px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_marginTop="30px"
                android:background="@drawable/shape_rounded_rectangle_transparent_border" />

            <TextView
                android:layout_marginLeft="8px"
                android:id="@+id/status_tv"
                android:layout_width="46px"
                android:layout_height="106px"
                android:layout_marginTop="29px"
                android:background="@drawable/img_answer_status_bg_green"
                android:paddingLeft="10px"
                android:paddingTop="10px"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20px" />
        </FrameLayout>


        <com.frank.etude.pageBtnBar.PageBtnBar
            android:id="@+id/page_btn_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30px"
            android:paddingTop="62px" />
    </LinearLayout>
</layout>
