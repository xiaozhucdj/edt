<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingRight="5dp"

    tools:context="com.example.xcz.readbook.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        >

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/tigan_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22px"
            android:layout_toRightOf="@id/jia"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/zl_black"
            android:text="题干"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/time_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22px"
            android:layout_toRightOf="@id/worktitle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/zl_black"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="时间"
            android:layout_weight="4"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageclick"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/btn_market_selector"
        />


    </FrameLayout>



</LinearLayout>
