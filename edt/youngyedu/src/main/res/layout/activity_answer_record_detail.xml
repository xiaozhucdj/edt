<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 标题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55px"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px">

            <ImageView
                android:id="@+id/btn_left"
                android:layout_width="28px"
                android:layout_height="28px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:clickable="true"
                android:onClick="back"
                android:src="@drawable/img_normal_fanhui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="xx问答"
                android:textColor="#000000"
                android:textSize="28px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:background="@color/black"
            android:paddingBottom="2px"
            android:paddingTop="2px"
            android:layout_marginTop="1px">

            <TextView
                android:id="@+id/question_body_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_selector_white_blue"
                android:gravity="center"
                android:text="题干"
                android:textColor="@drawable/btn_text_color_selector_black_white"
                android:textSize="24px"
                />

            <TextView
                android:id="@+id/answer_analysis_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_selector_white_blue"
                android:gravity="center"
                android:text="答案与解析"
                android:textColor="@drawable/btn_text_color_selector_black_white"
                android:textSize="24px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--装饰色块-->
            <View
                android:layout_width="4px"
                android:layout_height="26px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="14px"
                android:background="@drawable/bmp_bg_green" />
            <!--题目类型-->
            <TextView
                android:id="@+id/question_type_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="0px"
                android:text="题目类型xxx"
                android:textColor="@color/black"
                android:textSize="24px" />
            <!--开始时间-->
            <TextView
                android:id="@+id/start_time_tv"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_weight="1"
                android:text="问答开始时间："
                android:textColor="@color/black"
                android:textSize="22px" />
            <!--已用时间-->
            <TextView
                android:id="@+id/spend_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="已用时："
                android:textColor="@color/black"
                android:textSize="22px" />
            <!--问答中指示块-->
            <TextView
                android:id="@+id/checking_hint_tv"
                android:layout_width="120px"
                android:layout_height="56px"
                android:layout_marginLeft="30px"
                android:background="@drawable/img_wenda"
                android:gravity="right|center_vertical"
                android:paddingRight="10px"
                android:text="批改中"
                android:textColor="@color/white"
                android:textSize="24px" />
        </LinearLayout>
        <!--题目显示和左右翻页按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/last_page_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20px"
                android:src="@drawable/img_question_last" />

            <com.yougy.anwser.ContentDisplayer
                android:id="@+id/content_displayer"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="15px"
                android:paddingLeft="5px"
                android:paddingRight="5px" />

            <ImageView
                android:id="@+id/next_page_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20px"
                android:src="@drawable/img_question_next" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/black"/>
        <!--底部按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_marginTop="20px"
            android:background="@drawable/bmp_bg_green"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/buttom_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_zhengque"
                />
            <TextView
                android:id="@+id/buttom_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10px"
                android:gravity="center_vertical"
                android:text="正确"
                android:textColor="@color/white"
                android:textSize="24px"
                />
        </LinearLayout>
    </LinearLayout>
</layout>
