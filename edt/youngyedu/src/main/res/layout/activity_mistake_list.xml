<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="16px">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@drawable/le_btn_back_new_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="错题本"
                android:textColor="@color/shop_text_black_333333"
                android:textSize="28px" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_position_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前位置 : xxxxxxxxx    >>    xxxxxxxx"
                android:textColor="@color/black"
                android:textSize="22px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/black" />

        <RelativeLayout
            android:id="@+id/question_layout"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginBottom="30px"
            android:layout_marginTop="30px"
            android:layout_weight="1"

            android:visibility="gone">

            <com.yougy.anwser.ContentDisplayer
                android:id="@+id/content_displayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5px"
                android:paddingTop="15px" />

            <TextView
                android:id="@+id/start_practice_btn"
                android:layout_width="200px"
                android:layout_height="48px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="@drawable/img_press_button"
                android:gravity="center"
                android:text="开始练习"
                android:textColor="@color/white"
                android:textSize="24px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:background="@drawable/shape_rounded_rectangle_transparent_border">

            </RelativeLayout>
        </RelativeLayout>

        <com.frank.etude.pageBtnBar.PageBtnBar
            android:id="@+id/page_btn_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px" />

        <TextView
            android:id="@+id/no_result_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="290px"
            android:background="@drawable/shape_rectangle_black_border"
            android:paddingBottom="85px"
            android:paddingLeft="100px"
            android:paddingRight="100px"
            android:paddingTop="85px"
            android:text="该章节还没有错题哦!继续努力!"
            android:textColor="@color/black"
            android:textSize="28px"
            android:visibility="gone" />
    </LinearLayout>
</layout>
