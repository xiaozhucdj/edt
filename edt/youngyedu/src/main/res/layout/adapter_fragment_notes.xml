<?xml version="1.0" encoding="utf-8"?><!--<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="wrap_content"--><!--android:layout_height="wrap_content"--><!--android:paddingBottom="30dp">-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_book"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingBottom="42dp">

    <ImageView
        android:id="@+id/img_book_icon"
        android:layout_width="200dp"
        android:layout_height="267dp"
        android:background="@drawable/img_book_backgroud"
        android:paddingBottom="6dp"
        android:paddingLeft="2dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_note_cover" />


    <TextView

        android:id="@+id/tv_noteName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="海明威"
        android:textColor="@color/text_color_black"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/tv_noteGrade"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_noteName"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textColor="@color/text_color_black"
        android:textSize="18dp" />

    <TextView

        android:id="@+id/tv_myTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:maxLength="12"
        android:textColor="@color/text_color_black"
        android:textSize="24dp"
        android:textStyle="bold" />
</RelativeLayout><!--</FrameLayout>-->

