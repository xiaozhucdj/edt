<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingBottom="16px"
            >
            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@drawable/le_btn_back_new_selector"
                android:onClick="back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="错题本"
                android:textColor="@color/shop_text_black_333333"
                android:textSize="28px"
                />
        </RelativeLayout>
        <View android:layout_width="match_parent" android:layout_height="2px" android:background="@color/black"
            android:layout_marginTop="76px"/>
        <TextView
            android:id="@+id/question_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22px"
            android:text="习题数量 : 20"
            android:textColor="@color/black"
            android:layout_marginLeft="60px"
            android:layout_marginTop="156px"
            />
        <com.yougy.homework.CircleProgressBar
            android:id="@+id/circleProgressBar"
            android:layout_width="222px"
            android:layout_height="222px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="136px"
            />
        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22px"
            android:text="01:12:00"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60px"
            android:layout_alignTop="@id/question_num_tv"
            />
        <TextView
            android:id="@+id/clock_icon_tv"
            android:layout_width="20px"
            android:layout_height="20px"
            android:background="@drawable/icon_clock"
            android:layout_alignTop="@id/time_tv"
            android:layout_toLeftOf="@id/time_tv"
            android:layout_marginRight="15px"
            android:layout_marginTop="3px"
            />
        <com.yougy.homework.PageableRecyclerView
            android:id="@+id/main_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30px"
            android:layout_below="@id/circleProgressBar"
            android:layout_marginTop="20px"
            />
    </RelativeLayout>
</layout>
