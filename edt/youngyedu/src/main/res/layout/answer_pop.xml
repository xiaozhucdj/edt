<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    tools:context="com.example.xcz.readbook.MainActivity">



   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="37dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/dialog_white_shape"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:id="@+id/ystime_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"
            android:textSize="20px"
            android:textColor="@color/zl_black"
            android:layout_alignParentLeft="true"

            />

        <LinearLayout
            android:id="@+id/answered_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textSize="12dp"
                android:gravity="center"
                android:background="@drawable/black_shape"
                />
            <TextView
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:text="已作答"
                android:textSize="20px"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:textColor="@color/zl_black"
                />
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textSize="12dp"
                android:gravity="center"
                android:background="@drawable/subject_shape"
                />
            <TextView
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:text="未作答"
                android:layout_marginTop="3dp"
                android:textSize="20px"
                android:gravity="center"
                android:textColor="@color/zl_black"
                />




        </LinearLayout>


    </RelativeLayout>

    <com.inkscreen.will.utils.widget.MultiGridView
        android:id="@+id/subject_id"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:numColumns="9"
        android:cacheColorHint="#00000000"
        android:listSelector="@android:color/transparent"
        android:stretchMode="columnWidth"
        android:layout_height="120dp">
    </com.inkscreen.will.utils.widget.MultiGridView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        >

        <Button
            android:id="@+id/tijiao_btn_id"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:text="提交作业"
            android:textSize="22px"
            android:gravity="center"
            android:background="@drawable/radio_market_selector"
            android:textColor="@color/zl_black"
            />
        <Button
            android:id="@+id/shou_id"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:text="收起答题卡"
            android:gravity="center"
            android:textSize="22px"
            android:textColor="@color/zl_black"
            android:layout_alignParentRight="true"
            android:background="@drawable/radio_market_selector"
            />
        </RelativeLayout>

    </LinearLayout>


       <LinearLayout
           android:id="@+id/cancellayout_id"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           android:background="@color/transparent"
           >
           <!--<TextView-->
               <!--android:layout_width="160dp"-->
               <!--android:layout_height="40dp"-->
               <!--android:text="nihao"-->
               <!--android:gravity="center"-->
               <!--android:background="@drawable/bg_num"-->
               <!--/>-->

           <LinearLayout

               android:layout_width="160dp"
               android:layout_height="40dp"
               android:layout_centerHorizontal="true"
               android:background="@drawable/bg_num"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/popcount_id"
                   android:layout_width="100dp"
                   android:layout_height="35dp"
                   android:gravity="center"
                   android:text="0/0"
                   android:textColor="@color/zl_black"
                   android:textSize="22px" />

               <ImageView
                   android:layout_width="35dp"
                   android:layout_height="35dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginRight="10dp"
                   android:background="@drawable/image_arrow" />


           </LinearLayout>
       </LinearLayout>


   </FrameLayout>
</LinearLayout>
