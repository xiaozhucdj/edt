<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/topworng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            >
            <LinearLayout
                android:id="@+id/linearcentre_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_market_selector"
                >
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColor="@color/zl_card_drag_bg"
                    android:text="分类:"
                    android:clickable="false"
                    android:textSize="20px"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/name_id"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColor="@color/zl_black"
                    android:text="全部"
                    android:clickable="false"
                    android:paddingTop="5dp"
                    android:textSize="20px"
                    android:paddingLeft="1dp"
                    android:paddingRight="35dp"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                >
                <EditText
                    android:id="@+id/verifyCodeTxt"
                    android:hint="请输入题目内容或相关知识点搜索"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/maintitle_bg"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColorHint="@color/zl_card_drag_bg"
                    android:paddingLeft="10dp"
                   />
                <Button
                    android:id="@+id/getVerifyCodeBtn"
                    android:text="搜索"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:background="@drawable/maintitle_right_bg"
                    android:textSize="20px"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/worng_layout"
            android:orientation="vertical"
            android:layout_below="@id/topworng"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"

            >
            <TextView
                android:id="@+id/cuoticount_id"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/zl_black"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="14dp"
                android:visibility="gone"
                />

            <com.inkscreen.will.utils.widget.MultiListView
                android:id="@+id/wornglv_id"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:cacheColorHint="#00000000"
                android:layout_marginRight="20dp"
                android:listSelector="@android:color/transparent"
                android:divider="@null"
                android:layout_height="wrap_content">
            </com.inkscreen.will.utils.widget.MultiListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            >
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radio_worng_left_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="1"
                    android:textSize="13px"
                    android:textColor="@color/zl_white"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:checked="true"
                    android:button="@null"
                    android:background="@drawable/radio_bg"
                    android:visibility="gone"
                    />
                <RadioButton
                    android:id="@+id/radio_worng_middle_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="2"
                    android:textSize="13px"
                    android:textColor="@color/zl_black"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:checked="false"
                    android:button="@null"
                    android:background="@drawable/radio_bg"
                    android:visibility="gone"
                    />
                <RadioButton
                    android:id="@+id/radio_worng_right_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="3"
                    android:textSize="13px"
                    android:textColor="@color/zl_black"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:checked="false"
                    android:button="@null"
                    android:background="@drawable/radio_bg"
                    android:visibility="gone"
                    />

                <RadioButton
                    android:id="@+id/radio4_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="4"
                    android:textSize="13px"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:checked="false"
                    android:button="@null"
                    android:background="@drawable/radio_bg"
                    android:visibility="gone"
                    />
                <RadioButton
                    android:id="@+id/radio5_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="5"
                    android:textSize="13px"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:checked="false"
                    android:button="@null"
                    android:background="@drawable/radio_bg"
                    android:visibility="gone"
                    />

            </RadioGroup>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/view_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="350dp"

                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_empty"
                    />
                <TextView
                    android:id="@+id/tishi_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂时没有错题"
                    android:textSize="20px"
                    />

            </LinearLayout>
        </FrameLayout>
        <include
            android:id="@+id/layout_net_error"
            layout="@layout/layout_net_error"/>
    </RelativeLayout>
</LinearLayout>
