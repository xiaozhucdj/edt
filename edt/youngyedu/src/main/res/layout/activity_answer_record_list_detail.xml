<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 标题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55px"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px">

            <ImageView
                android:id="@+id/btn_left"
                android:layout_width="28px"
                android:layout_height="28px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:clickable="true"
                android:onClick="back"
                android:src="@drawable/img_normal_fanhui" />

            <ImageView
                android:id="@+id/image_refresh"
                android:layout_width="32px"
                android:layout_height="30px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:layout_toRightOf="@+id/btn_left"
                android:onClick="refresh"
                android:src="@drawable/icon_shuaxin" />


            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="xx问答"
                android:textColor="#000000"
                android:textSize="28px" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_gravity="center_vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/tv_last_homework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="29dp"
                android:background="@drawable/img_press_tm_bg"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/last_homework_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_timu_last" />

                <TextView
                    android:id="@+id/last_homework_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="上一题"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_next_homework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="29dp"
                android:layout_weight="1"
                android:background="@drawable/img_press_tm_bg"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/next_homework_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="下一题"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/next_homework_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_timu_next" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_chooese_homework"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_homework_position"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="x/x"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/iv_chooese_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_timu_down" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/black" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_nav_bar"
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:background="@color/black"
                android:paddingBottom="2px">

                <TextView
                    android:id="@+id/question_body_btn"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_selector_white_blue"
                    android:gravity="center"
                    android:text="题干"
                    android:textColor="@drawable/btn_text_color_selector_black_white"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/answer_analysis_btn"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_selector_white_blue"
                    android:gravity="center"
                    android:text="解答"
                    android:textColor="@drawable/btn_text_color_selector_black_white"
                    android:textSize="24px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_answer_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_nav_bar"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!--装饰色块-->
                <View
                    android:layout_width="4px"
                    android:layout_height="26px"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="14px"
                    android:background="@drawable/bmp_bg_green" />
                <!--题目类型-->
                <TextView
                    android:id="@+id/question_type_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="12px"
                    android:text="题目类型xxx"
                    android:textColor="@color/black"
                    android:textSize="24px" />
                <!--开始时间-->
                <TextView
                    android:id="@+id/start_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="12px"
                    android:text="问答开始时间：xxxxxxx"
                    android:textColor="@color/black"
                    android:textSize="22px" />
                <!--已用时间-->
                <TextView
                    android:id="@+id/spend_time_tv"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="12px"
                    android:layout_weight="1"
                    android:text="已用时：xxxxxxx"
                    android:textColor="@color/black"
                    android:textSize="22px" />
                <!--问答中指示块-->
                <TextView
                    android:id="@+id/status_hint_tv"
                    android:layout_width="120px"
                    android:layout_height="56px"
                    android:layout_marginLeft="30px"
                    android:background="@drawable/img_wenda"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10px"
                    android:text="批改中"
                    android:textColor="@color/white"
                    android:textSize="24px"
                    android:visibility="gone" />
            </LinearLayout>

            <com.yougy.anwser.WriteableContentDisplayer
                android:id="@+id/content_displayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_answer_des" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_all_homework_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:padding="30px"
                android:visibility="gone"></android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_chooese_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_chooese_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_error"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:button="@drawable/rb_result_selector"
                        android:onClick="onClick"
                        android:text=" 错误（x）"
                        android:textSize="28px" />

                    <RadioButton
                        android:id="@+id/rb_right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="200dp"
                        android:button="@drawable/rb_result_selector"
                        android:onClick="onClick"
                        android:text=" 正确（√）"
                        android:textSize="28px" />
                </RadioGroup>
            </LinearLayout>
        </FrameLayout>

        <com.frank.etude.pageable.PageBtnBar
            android:id="@+id/page_btn_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/black" />
        <!--底部按钮-->
        <LinearLayout
            android:id="@+id/buttom_btn"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:background="@drawable/bmp_bg_green"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/buttom_icon"
                android:layout_width="35px"
                android:layout_height="35px"
                android:background="@drawable/img_zhengque"
                android:visibility="gone" />

            <TextView
                android:id="@+id/buttom_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10px"
                android:gravity="center_vertical"
                android:text="关闭"
                android:textColor="@color/white"
                android:textSize="24px"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</layout>
