<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="60px"
            >
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="60px"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/edu_img_back_select"
                android:scaleType="fitXY"
                android:paddingLeft="30px"
                android:paddingTop="15px"
                android:paddingBottom="15px"
                android:onClick="onBack"
                />
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="订单详情"
                android:textColor="@color/black"
                android:textSize="26px" />
        </RelativeLayout>

        <View android:layout_width="match_parent" android:layout_height="2px" android:background="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/order_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_marginLeft="30px"
                android:text="订单编号"
                android:textSize="24px"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/order_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额"
                android:textColor="@color/gray_666666"
                android:textSize="20px"
                android:layout_alignLeft="@id/order_num_tv"
                android:layout_below="@id/order_num_tv"
                android:layout_marginTop="15px"
                />
            <TextView
                android:id="@+id/order_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间"
                android:textColor="@color/gray_666666"
                android:textSize="20px"
                android:layout_alignLeft="@id/order_price_tv"
                android:layout_below="@id/order_price_tv"
                android:layout_marginTop="15px"
                android:layout_marginBottom="30px"
                />
            <TextView
                android:id="@+id/cancle_btn"
                android:layout_width="110px"
                android:layout_height="48px"
                android:text="取消"
                android:textSize="24px"
                android:textColor="@drawable/btn_text_color_selector"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:background="@drawable/shop_btn_bg_selector"
                android:clickable="true"
                android:onClick="cancleOrder"
                />
            <TextView
                android:id="@+id/pay_btn"
                android:layout_width="110px"
                android:layout_height="48px"
                android:text="支付"
                android:textSize="24px"
                android:textColor="@drawable/btn_text_color_selector"
                android:gravity="center"
                android:layout_toLeftOf="@id/cancle_btn"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:background="@drawable/shop_btn_bg_selector"
                android:onClick="pay"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/order_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:textSize="24px"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:visibility="gone"
                />
        </RelativeLayout>

        <View android:layout_width="match_parent" android:layout_height="2px" android:background="@color/black" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单商品详情 : "
            android:textColor="@color/black_333333"
            android:textSize="22px"
            android:layout_marginTop="30px"
            android:layout_marginLeft="30px"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/book_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="13px"
            android:paddingRight="13px"
            android:paddingTop="5px"
            />
        <LinearLayout
            android:id="@+id/page_btn_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="45px"
            >
        </LinearLayout>
    </LinearLayout>
</layout>
