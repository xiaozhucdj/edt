<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/confirm_order_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingBottom="0dp"
        >

        <ImageView
            android:id="@+id/confirm_order_back_btn"
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@drawable/le_btn_back_new_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/confirm_pay"
            android:textColor="@color/shop_text_black_333333"
            android:textSize="28px"
            />
    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="2px" android:layout_marginTop="14px" android:background="@color/zl_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="21px"
        android:paddingBottom="20px"
        >
        <TextView
            android:id="@+id/confirm_order_order_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23px"
            android:textColor="@color/zl_black"
            android:text="XXXXXXXXX"
            android:layout_marginLeft="30px"
            />

        <TextView
            android:id="@+id/confirm_order_order_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23px"
            android:textColor="@color/zl_black"
            android:text="XXXXXXXXX"
            android:layout_marginLeft="60px"
            />
    </LinearLayout>


    <View android:layout_width="match_parent" android:layout_height="8px" android:background="@color/gray_dfdfdf" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_goods_detail"
        android:textSize="21px"
        android:textColor="@color/zl_black"
        android:layout_marginTop="31px"
        android:layout_marginLeft="30px"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/confirm_order_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="590px"
        android:paddingLeft="13px"
        android:paddingRight="13px"
        android:paddingTop="5px"
        />
    <LinearLayout
        android:id="@+id/confirm_order_page_btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="45px"
        >
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/zl_black"
        android:layout_marginTop="20px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/LightGrey"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        >
        <TextView
            android:id="@+id/confirm_order_order_info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXXXXX"
            android:textColor="@color/zl_black"
            android:textSize="21px"
            android:gravity="right"
            android:layout_marginTop="15px"
            />
        <LinearLayout
            android:id="@+id/confirm_order_wechat_pay_btn"
            android:layout_width="match_parent"
            android:layout_height="52px"
            android:orientation="horizontal"
            android:background="@drawable/shop_btn_bg_selector"
            android:layout_marginTop="27px"
            android:gravity="center_vertical"
            android:paddingLeft="305px"
            >
            <View
                android:layout_width="38px"
                android:layout_height="30px"
                android:background="@drawable/wechat_pay_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wechat_pay"
                android:textColor="@color/zl_black"
                android:textSize="23px"
                android:layout_marginLeft="20px"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/confirm_order_alipay_btn"
            android:layout_width="match_parent"
            android:layout_height="52px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/shop_btn_bg_selector"
            android:layout_marginTop="30px"
            android:paddingLeft="305px"
            >
            <View
                android:layout_width="33px"
                android:layout_height="33px"
                android:background="@drawable/alipay_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alipay_pay"
                android:textColor="@drawable/page_text_selector"
                android:textSize="23px"
                android:layout_marginLeft="22px"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>