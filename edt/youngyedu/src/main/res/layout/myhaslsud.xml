<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zhezhao_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/cancel_id"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/le_btn_back_new_selector"
            android:text="取消" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:background="@color/zl_magic_theme_info" />

        <TextView
            android:id="@+id/title_id"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/cancel_id"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="错题详情"
            android:textColor="@color/zl_black"
            android:textSize="22px" />


        <!--<Button-->
        <!--android:id="@+id/report_btn_id"-->
        <!--android:layout_width="170dp"-->
        <!--android:layout_height="35dp"-->
        <!--android:text="查看作业报告"-->
        <!--android:textColor="@color/zl_black"-->
        <!--android:gravity="center"-->
        <!--android:textSize="22px"-->
        <!--android:background="@drawable/radio_market_selector"-->
        <!--android:layout_alignParentRight="true"-->
        <!--/>-->

        <ImageView
            android:id="@+id/report_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/report_selector"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/zl_black" />


    <FrameLayout
        android:id="@+id/loading_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"

            >

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在加载中..." />


        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/show_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="350dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/imgnet_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_net" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络异常"
                android:textColor="@color/hui"
                android:textSize="20px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请检查您的网络设置"
                android:textColor="@color/hui"
                android:textSize="20px" />

        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/pop_layout_id"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/radio_market_selector"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/top_id"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="0/0"
                android:textColor="@color/zl_black"
                android:textSize="22px" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/image_arrow" />


        </LinearLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_layout_id"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_timu_id"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/answerbtn"
                android:button="@null"
                android:gravity="center"
                android:text="题目"
                android:textColor="@color/zl_black"
                android:textSize="22px" />

            <RadioButton
                android:id="@+id/radio_my_respond"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/answerbtn"
                android:button="@null"
                android:gravity="center"
                android:text="我的解答"
                android:textColor="@color/zl_black"
                android:textSize="22px" />

            <RadioButton
                android:id="@+id/radio_sure_respond"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/answerbtn"
                android:button="@null"
                android:gravity="center"
                android:text="正确答案"
                android:textColor="@color/zl_black"
                android:textSize="22px"

                />

            <RadioButton
                android:id="@+id/radio_analysis"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/answerbtn"
                android:button="@null"
                android:gravity="center"
                android:text="详细解析"
                android:textColor="@color/zl_black"
                android:textSize="22px"

                />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/layoutresult_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/image_result"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/result_id"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="回答错误"
                android:textColor="@color/zl_black"
                android:textSize="20px" />

        </LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="830dp">

        <LinearLayout
            android:id="@+id/linear_timu_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tigan_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@color/zl_black"
                        android:textSize="22px" />

                    <TextView
                        android:id="@+id/textVis_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/zl_text_detail"
                        android:textSize="22px" />


                    <LinearLayout
                        android:id="@+id/choices_list_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:cacheColorHint="#00000000"
                        android:divider="@null"
                        android:listSelector="@android:color/transparent"
                        android:orientation="vertical"></LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/zl_black"
                            android:visibility="invisible" />

                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_my_respond"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bond_two_shape"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">


            <ImageView
                android:id="@+id/img_dati1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_dati2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_sure_respond"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bond_two_shape"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/html_surerespond"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:text=""
                android:textColor="@color/zl_black"
                android:textSize="22px" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_analysis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bond_two_shape"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/textanalysis_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:text=""
                android:textColor="@color/zl_black"
                android:textSize="22px" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/Rel_show_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/shang_ti"
                android:layout_width="40dp"
                android:layout_height="120dp"
                android:background="@drawable/pagexia_market_selector"
                android:button="@null"
                android:gravity="center"
                android:text="上一题"
                android:textColor="@color/zl_black"
                android:textSize="22px" />

            <Button
                android:id="@+id/xia_ti"
                android:layout_width="40dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/pageshang_market_selector"
                android:button="@null"
                android:gravity="center"
                android:text="下一题"
                android:textColor="@color/zl_black"
                android:textSize="22px" />

        </RelativeLayout>
        <!--<FrameLayout-->
        <!--android:id="@+id/zhezhao_id"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginLeft="50dp"-->
        <!--android:layout_marginRight="50dp"-->
        <!--android:visibility="gone"-->
        <!-->-->
        <!--</FrameLayout>-->
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rel_myanswer_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lianxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:text="练习次数:"
            android:textColor="@color/zl_black"
            android:textSize="22px"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/textlianxi_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/lianxi"
            android:text="11"
            android:textColor="@color/zl_black"
            android:textSize="22px"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/cuoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/textlianxi_id"
            android:text="错题次数:"
            android:textColor="@color/zl_black"
            android:textSize="22px"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/textcuoti_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/cuoti"
            android:text="11"
            android:textColor="@color/zl_black"
            android:textSize="22px"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/cuorenshu_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/textcuoti_id"
            android:text="做错过的人数:"
            android:textColor="@color/zl_black"
            android:textSize="22px"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textrenshu_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/cuorenshu_id"
            android:text="11"
            android:textColor="@color/zl_black"
            android:textSize="22px"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/imgbutton_right_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_leftright_new_selector" />

        <TextView
            android:id="@+id/yeshu_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:gravity="center"
            android:text="1/1"
            android:textColor="@color/zl_black"
            android:textSize="22px" />


        <ImageButton
            android:id="@+id/imgbutton_left_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:background="@drawable/btn_leftright1_new_selector" />

    </RelativeLayout>


</LinearLayout>