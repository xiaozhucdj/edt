<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/shop_favorite_title_bar"
        android:layout_width="match_parent"
        android:layout_height="76px"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/shop_favorite_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:src="@drawable/icon_fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/favorite"
            android:textColor="@color/text_color_black"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/shop_favorite_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:src="@drawable/shanchu_selector"
            android:visibility="invisible" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/zl_black" />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/shop_favorite_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_favorite_title_bar"
        android:orientation="vertical"></LinearLayout>

    <ImageButton
        android:id="@+id/shop_favorite_select_all_checkbox"
        android:layout_width="22px"
        android:layout_height="22px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19px"
        android:layout_marginLeft="30px"
        android:background="@drawable/btn_check_select" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17px"
        android:layout_marginLeft="30px"
        android:layout_toRightOf="@id/shop_favorite_select_all_checkbox"
        android:text="@string/select_all"
        android:textColor="@color/zl_black"
        android:textSize="24px" />

    <View
        android:id="@+id/shop_favorite_bottom_separator_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="76px"
        android:background="@color/zl_black" />

    <LinearLayout
        android:id="@+id/shop_favorite_page_btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16px"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_favorite_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/shop_favorite_title_bar"
        android:layout_marginTop="2px"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="155px"
            android:layout_height="150px"
            android:layout_marginTop="238px"
            android:src="@drawable/favorite_icon_big" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72px"
            android:text="@string/favorite_empty"
            android:textSize="28px" />
    </LinearLayout>
</RelativeLayout>