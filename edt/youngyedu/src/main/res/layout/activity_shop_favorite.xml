<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/shop_favorite_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingBottom="16px"
        >
        <ImageView
            android:id="@+id/shop_favorite_back_btn"
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@drawable/le_btn_back_new_selector" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/favorite"
            android:textColor="@color/shop_text_black_333333"
            android:textSize="28px"
            android:paddingTop="10px"
            />
        <ImageView
            android:id="@+id/shop_favorite_delete_btn"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:src="@drawable/edu_img_notedeltete_select"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="2px" android:layout_below="@id/shop_favorite_title_bar" android:background="@color/zl_black" />

    <LinearLayout
        android:id="@+id/shop_favorite_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/shop_favorite_title_bar">
    </LinearLayout>

    <ImageButton
        android:id="@+id/shop_favorite_select_all_checkbox"
        android:layout_width="22px"
        android:layout_height="22px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19px"
        android:layout_marginLeft="30px"
        android:background="@drawable/btn_check_select" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_toRightOf="@id/shop_favorite_select_all_checkbox"
        android:text="@string/select_all"
        android:textColor="@color/zl_black"
        android:textSize="24px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17px"
        />

    <View
        android:id="@+id/shop_favorite_bottom_separator_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@id/shop_favorite_select_all_checkbox"
        android:layout_marginBottom="20px"
        android:background="@color/zl_black" />

    <LinearLayout
        android:id="@+id/shop_favorite_page_btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/shop_favorite_bottom_separator_line"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20px"
        >

    </LinearLayout>
    <LinearLayout
        android:id="@+id/shop_favorite_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@android:color/white"
        android:layout_below="@id/shop_favorite_title_bar"
        android:visibility="gone"
        android:layout_marginTop="2px"
        >
        <ImageView
            android:layout_width="155px"
            android:layout_height="150px"
            android:src="@drawable/favorite_icon_big"
            android:layout_marginTop="238px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite_empty"
            android:textSize="28px"
            android:layout_marginTop="72px"
            />
    </LinearLayout>
</RelativeLayout>