<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginBottom="50px"
        android:id="@+id/rl_book_itemS"
        android:layout_width="wrap_content"
        android:layout_height="262px"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_book_icon"
            android:layout_width="162px"
            android:layout_height="212px"
            android:background="@drawable/img_book_backgroud_s"
            android:paddingBottom="11px"
            android:paddingRight="11px"
            android:src="@drawable/book_adaper_item_icon_test_normal" />

        <ImageView
            android:id="@+id/img_down_book_s"
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_alignRight="@id/img_book_icon"
            android:layout_alignBottom="@id/img_book_icon"
            android:layout_marginBottom="11px"
            android:layout_marginRight="11px"
            android:background="@null" />



    </RelativeLayout>
</FrameLayout>

