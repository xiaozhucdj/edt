<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/book_img"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:background="@drawable/cart_book"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:src="@drawable/img_page_next_normal"
        />
    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="语文"
        android:layout_toRightOf="@+id/book_img"
        android:layout_alignTop="@+id/book_img"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蒋亮"
        android:textSize="20sp"
        android:layout_below="@+id/book_name"
        android:layout_alignLeft="@+id/book_name"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/book_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课本简介"
        android:textSize="10sp"
        android:layout_below="@+id/book_author"
        android:layout_alignLeft="@+id/book_author"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>