<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:background="@drawable/shape_rectangle_black_border"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:paddingRight="10px"
        >
        <TextView
            android:id="@+id/status_tv"
            android:layout_width="36px"
            android:layout_height="82px"
            android:textSize="16px"
            android:textColor="@color/white"
            android:paddingTop="12px"
            android:paddingLeft="8px"
            android:textStyle="bold"
            android:lineSpacingExtra="5px"
            />
        <TextView
            android:id="@+id/homework_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9月15号化学英语作业"
            android:textSize="24px"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/status_tv"
            android:layout_marginTop="20px"
            android:layout_marginLeft="27px"
            />
        <TextView
            android:id="@+id/red_dot"
            android:layout_width="14px"
            android:layout_height="14px"
            android:background="@drawable/img_red_dot"
            android:layout_toRightOf="@id/homework_name_tv"
            android:layout_alignTop="@id/homework_name_tv"
            android:layout_marginLeft="5px"
            android:layout_marginTop="1px"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/group_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="组名 : xxxxx"
            android:textSize="22px"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/homework_name_tv"
            android:layout_alignBottom="@id/homework_name_tv"
            android:layout_marginLeft="50px"
            />
        <TextView
            android:id="@+id/lifetime_tv"
            android:layout_width="76px"
            android:layout_height="28px"
            android:background="@drawable/bg_time_limit"
            android:text="xx分钟"
            android:textSize="18px"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10px"
            android:layout_marginLeft="10px"
            />
        <TextView
            android:id="@+id/total_score_tv"
            android:layout_width="60px"
            android:layout_height="28px"
            android:background="@drawable/bg_score"
            android:text="xx分"
            android:textSize="18px"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_toLeftOf="@id/lifetime_tv"
            android:layout_alignTop="@id/lifetime_tv"
            />
        <TextView
            android:id="@+id/clock_icon_tv"
            android:layout_width="20px"
            android:layout_height="20px"
            android:background="@drawable/icon_clock"
            android:layout_alignLeft="@id/homework_name_tv"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12px"
            />
        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20px"
            android:textColor="@color/black"
            android:text="时间 : xxxxxxxxxxxx"
            android:layout_toRightOf="@id/clock_icon_tv"
            android:layout_alignTop="@id/clock_icon_tv"
            android:layout_marginLeft="10px"
            android:layout_marginTop="-6px"
            />

        <TextView
            android:id="@+id/text_rate_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50px"
            android:textSize="22px"
            android:textColor="@color/black"
            android:text="正确率：70%"
            android:visibility="gone"/>
    </RelativeLayout>
</layout>
