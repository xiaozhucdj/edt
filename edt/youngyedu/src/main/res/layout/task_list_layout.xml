<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y30"
            android:src="@drawable/le_btn_back_new_selector"
            android:onClick="back"
            />
        <ImageView
            android:id="@+id/refresh_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/back_iv"
            app:layout_constraintTop_toTopOf="@+id/back_iv"
            app:layout_constraintBottom_toBottomOf="@+id/back_iv"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/ic_dialog_reader_menu_refresh_black"
            />
        <TextView
            android:id="@+id/uncomplete_tv"
            android:layout_width="0px"
            android:layout_height="@dimen/y60"
            android:text="未完成"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_iv"
            app:layout_constraintRight_toLeftOf="@+id/completed_tv"
            android:layout_marginTop="@dimen/y30"
            android:background="@drawable/btn_bg_selector"
            android:textColor="@drawable/btn_text_color_selector_black_white"
            android:onClick="uncomplete"
            />
        <TextView
            android:id="@+id/completed_tv"
            android:layout_width="0px"
            android:layout_height="@dimen/y60"
            android:text="已完成"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/uncomplete_tv"
            app:layout_constraintTop_toTopOf="@+id/uncomplete_tv"
            android:background="@drawable/btn_bg_selector"
            android:textColor="@drawable/btn_text_color_selector_black_white"
            android:onClick="complete"
            />
        <com.yougy.homework.PageableRecyclerView
            android:id="@+id/tasks_recycler"
            android:layout_width="0px"
            android:layout_height="0px"
            app:layout_constraintTop_toBottomOf="@+id/uncomplete_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</layout>