<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/cancel_id"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/le_btn_back_new_selector" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:background="@color/zl_magic_theme_info" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/cancel_id"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="错题详情"
            android:textColor="@color/zl_black"
            android:textSize="22px" />


        <TextView
            android:id="@+id/answered_time_id"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/zl_black"
            android:textSize="22px" />

        <ImageView
            android:id="@+id/watch_id"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@id/answered_time_id"
            android:src="@drawable/img_normal_shijian"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/zl_black" />

    <FrameLayout
        android:id="@+id/loading_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"

            >

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在加载中..." />


        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/show_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="350dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/imgnet_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_net" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络异常"
                android:textColor="@color/hui"
                android:textSize="20px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请检查您的网络设置"
                android:textColor="@color/hui"
                android:textSize="20px" />

        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/pop_layout_id"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/radio_market_selector"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/top_id"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="0/0"
                android:textColor="@color/zl_black"
                android:textSize="22px" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/image_arrow" />


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_timu_id"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/answerbtn"
                    android:button="@null"
                    android:gravity="center"
                    android:text="题目"
                    android:textColor="@color/zl_black"
                    android:textSize="22px" />

                <RadioButton
                    android:id="@+id/radio_daan_id"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/answerbtn"
                    android:button="@null"
                    android:gravity="center"
                    android:text="我的解答"
                    android:textColor="@color/zl_black"
                    android:textSize="22px" />
            </RadioGroup>

        </LinearLayout>


        <FrameLayout
            android:id="@+id/zhezhao_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <!--<LinearLayout-->
            <!--android:id="@+id/layout_id"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:orientation="vertical"-->
            <!--android:visibility="invisible">-->

            <ScrollView
                android:id="@+id/scrollView_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scrollbars="none"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tigan_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@color/zl_black"
                        android:textSize="22px" />

                    <!--<TextView-->
                    <!--android:id="@+id/textVis_id"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="15dp"-->
                    <!--android:gravity="center"-->
                    <!--android:text=""-->
                    <!--android:textColor="@color/zl_text_detail"-->
                    <!--android:textSize="22px" />-->

                    <LinearLayout
                        android:id="@+id/choices_list_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>
            </ScrollView>
            <!--</LinearLayout>-->

            <LinearLayout
                android:id="@+id/dati_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bond_two_shape"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/img_dati1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="4dp"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_dati2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="4dp"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imgbutton_left_id"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_leftright1_new_selector"

                        />

                    <TextView
                        android:id="@+id/yeshu_id"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="1/1"
                        android:textColor="@color/zl_black"
                        android:textSize="20px" />

                    <ImageButton
                        android:id="@+id/imgbutton_right_id"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_leftright_new_selector" />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/Rel_show_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/shang_ti"
                    android:layout_width="40dp"
                    android:layout_height="120dp"
                    android:background="@drawable/pagexia_market_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="上一题"
                    android:textColor="@color/zl_black"
                    android:textSize="22px" />

                <Button
                    android:id="@+id/xia_ti"
                    android:layout_width="40dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/pageshang_market_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="下一题"
                    android:textColor="@color/zl_black"
                    android:textSize="22px" />


            </RelativeLayout>
            <!--<FrameLayout-->
            <!--android:id="@+id/zhezhao_id"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginLeft="50dp"-->
            <!--android:layout_marginRight="50dp"-->
            <!--android:visibility="gone"-->
            <!-->-->

            <!--</FrameLayout>-->

        </FrameLayout>


    </LinearLayout>


</LinearLayout>