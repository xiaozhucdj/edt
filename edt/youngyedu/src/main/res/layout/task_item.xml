            <!--android:id="@+id/task_type"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="班级任务"-->
            <!--app:layout_constraintTop_toTopOf="@+id/task_title"-->
            <!--app:layout_constraintBottom_toBottomOf="@+id/task_title"-->
            <!--app:layout_constraintRight_toRightOf="parent"-->
            <!--android:layout_marginRight="@dimen/x60"-->
            <!--/>-->
        <!--<TextView-->
            <!--android:id="@+id/task_group"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:visibility="gone"-->
            <!--android:text="第一组"-->
            <!--app:layout_constraintTop_toTopOf="@+id/task_type"-->
            <!--app:layout_constraintBottom_toBottomOf="@+id/task_type"-->
            <!--/>-->
        <TextView
            android:id="@+id/task_data_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学习资料数"
            app:layout_constraintLeft_toLeftOf="@+id/task_title"
            app:layout_constraintTop_toBottomOf="@+id/task_chapter"
            android:layout_marginTop="@dimen/y20"
            android:textSize="@dimen/x22"
            />
        <TextView
            android:id="@+id/task_data_count"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/task_data_count_tv"
            app:layout_constraintRight_toRightOf="@+id/task_data_count_tv"
            app:layout_constraintTop_toBottomOf="@+id/task_data_count_tv"
            android:gravity="center"
            android:text="2"
            android:textSize="@dimen/x22"
            android:layout_marginTop="@dimen/y15"
            />
        <TextView
            android:id="@+id/task_exercise_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务练习数"
            app:layout_constraintTop_toTopOf="@+id/task_data_count_tv"
            app:layout_constraintBottom_toBottomOf="@+id/task_data_count_tv"
            app:layout_constraintLeft_toRightOf="@+id/task_data_count_tv"
            android:layout_marginLeft="@dimen/x150"
            android:textSize="@dimen/x22"
            />
        <TextView
            android:id="@+id/task_exercise_count"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="@dimen/x22"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@+id/task_exercise_count_tv"
            app:layout_constraintRight_toRightOf="@+id/task_exercise_count_tv"
            app:layout_constraintTop_toTopOf="@+id/task_data_count"
            app:layout_constraintBottom_toBottomOf="@+id/task_data_count"
            />
        <TextView
            android:id="@+id/signature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家长签字"
            app:layout_constraintTop_toTopOf="@+id/task_exercise_count_tv"
            app:layout_constraintBottom_toBottomOf="@+id/task_exercise_count_tv"
            app:layout_constraintLeft_toRightOf="@+id/task_exercise_count_tv"
            android:layout_marginLeft="@dimen/x150"
            android:textSize="@dimen/x22"
            />
        <TextView
            android:id="@+id/signature"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="是"
            android:textSize="@dimen/x22"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@+id/signature_text"
            app:layout_constraintRight_toRightOf="@+id/signature_text"
            app:layout_constraintTop_toTopOf="@+id/task_data_count"
            app:layout_constraintBottom_toBottomOf="@+id/task_data_count"
            />


    </android.support.constraint.ConstraintLayout>
</layout>