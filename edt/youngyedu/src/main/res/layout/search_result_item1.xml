<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data class =".SearchResult">
        <variable
            name="bookInfo"
            type="com.yougy.shop.bean.BookInfo"/>
        <variable
            name="bookSummary"
            type="String"/>
    </data>
    <!--android:layout_width="120dp"-->
    <!--android:layout_height="160dp"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="278px"
        >

        <ImageView
            android:id="@+id/book_img"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_marginTop="38px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/shu_bg"
            android:src="@drawable/cart_book"
            android:paddingRight="@dimen/image_padding"
            android:paddingBottom="@dimen/image_padding"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/img_more" />

        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/book_img"
            android:layout_alignTop="@+id/book_img"
            android:gravity="top"
            android:layout_marginRight="80px"
            android:text="@{bookInfo.bookTitle}"
            android:textSize="24px"
            android:lineSpacingExtra="-5px"
            android:includeFontPadding="false"
            android:textColor="@color/text_color_black"
            android:maxEms="23"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <com.yougy.view.AlignTextView
            android:id="@+id/book_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/book_name"
            android:layout_below="@+id/book_name"
            android:lineSpacingExtra="-3px"
            android:layout_marginTop="20px"
            android:layout_marginRight="80px"
            android:text="@{bookSummary}"
            android:textSize="20px"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxEms="50"
            />
        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/book_intro"
            android:layout_toRightOf="@+id/book_img"
            android:layout_marginTop="20px"
            android:layout_below="@+id/book_intro"
            android:includeFontPadding="false"
            android:text="@{bookInfo.bookAuthor}"
            android:textSize="20px"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/book_classify"
            android:layout_width="80px"
            android:layout_height="30px"
            android:textSize="20px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:layout_marginBottom="25px"
            android:layout_marginRight="80px"
            android:gravity="center"
            android:text="@{bookInfo.bookCategoryFamilyName}"
            android:background="@drawable/img_keben"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/directory_text"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</layout>