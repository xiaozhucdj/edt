<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="544dp"
        android:layout_height="617dp"
        android:layout_gravity="center"
        android:background="@drawable/img_lable_bg">

        <LinearLayout
            android:id="@+id/note_opt_layout"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:background="@drawable/img_lable_title"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/save_label"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="33dp"
                android:src="@drawable/edu_img_lable_minimize_select" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:background="@color/background_black" />

            <ImageView
                android:id="@+id/input_gesture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="39dp"
                android:src="@drawable/edu_img_pen_select" />

            <ImageView
                android:id="@+id/input_soft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="40dp"
                android:src="@drawable/edu_img_lable_et_select" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="39dp"
                android:background="@color/background_black" />

            <ImageView
                android:id="@+id/undo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="36dp"
                android:src="@drawable/edu_img_undo_select"

                />

            <ImageView
                android:id="@+id/redo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="37dp"
                android:src="@drawable/edu_img_redo_select" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="36dp"
                android:background="@color/background_black" />

            <ImageView
                android:id="@+id/cancel_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="31dp"
                android:src="@drawable/edu_img_lable_delete_select" />
        </LinearLayout>

        <com.yougy.view.NoteBookView
            android:id="@+id/booknote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/note_opt_layout"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/note_opt_layout"
            android:layout_margin="10dp"
            android:background="@color/background"
            android:gravity="start|top"
            android:visibility="gone" />
    </RelativeLayout>
</FrameLayout>

