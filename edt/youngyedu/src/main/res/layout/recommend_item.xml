<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_result_root"
    android:layout_width="@dimen/shop_book_list_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/search_result_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shop_book_img_height"
        android:background="@drawable/img_book_backgroud"
        android:paddingBottom="@dimen/shop_book_img_padding"
        android:paddingRight="@dimen/shop_book_img_padding"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/search_result_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_book_price_margin_top"
        android:text="0.0"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/shop_book_price_text_size"
        android:textStyle="bold"
        android:includeFontPadding="false"
        />
    <TextView
        android:id="@+id/search_result_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_book_name_margin_top"
        android:maxEms="7"
        android:text="图书名称"
        android:includeFontPadding="false"
        android:textSize="@dimen/shop_book_name_text_size"
        android:textColor="@color/text_color_black"
         />
</LinearLayout>