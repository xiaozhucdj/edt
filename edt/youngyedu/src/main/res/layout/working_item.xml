<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingRight="5dp"

    tools:context="com.example.xcz.readbook.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/btn_market_selector"

        >
        <TextView
            android:id="@+id/jia"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="假"
            android:textSize="22px"
            android:background="@color/zl_black"
            android:textColor="@color/zl_white"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/worktitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22px"
            android:layout_toRightOf="@id/jia"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/zl_black"
            android:text="0806正余弦定理(1)"
            />
        <TextView
            android:id="@+id/zhuangtai_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22px"
            android:layout_toRightOf="@id/worktitle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/zl_black"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="0806正余弦定理(2)"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/worktime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="今天8：00截至"
            android:textSize="22px"
            android:textColor="@color/zl_black"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:id="@+id/workamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="题目数量0/55"
            android:textSize="22px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/zl_black"
            />
    </RelativeLayout>



</LinearLayout>
