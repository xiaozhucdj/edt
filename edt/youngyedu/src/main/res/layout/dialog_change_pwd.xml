<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half_transparent">

        <RelativeLayout
            android:layout_width="600px"
            android:layout_height="404px"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_rounded_rectangle_all_white"
            android:paddingBottom="30px"
            android:paddingRight="40px">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30px"
                android:text="修改开机密码"
                android:textColor="@color/black"
                android:textSize="26px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/old_pwd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_tv"
                android:layout_marginLeft="89px"
                android:layout_marginTop="47px"
                android:gravity="center"
                android:text="旧密码 : "
                android:textColor="@color/black"
                android:textSize="24px"
                />

            <EditText
                android:id="@+id/old_pwd_edtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_tv"
                android:layout_marginLeft="20px"
                android:layout_marginTop="40px"
                android:layout_toRightOf="@id/old_pwd_tv"
                android:background="@drawable/shape_rounded_rectangle_black_border"
                android:hint="请输入旧密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="10px"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="22px"
                android:maxLength="16"/>

            <TextView
                android:id="@+id/new_pwd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/old_pwd_edtv"
                android:layout_marginLeft="89px"
                android:layout_marginTop="27px"
                android:gravity="center"
                android:text="新密码 : "
                android:textColor="@color/black"
                android:textSize="24px" />

            <EditText
                android:id="@+id/new_pwd_edtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/old_pwd_edtv"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:layout_toRightOf="@id/new_pwd_tv"
                android:background="@drawable/shape_rounded_rectangle_black_border"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="10px"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="22px"
                android:maxLength="16"/>

            <TextView
                android:id="@+id/again_new_pwd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_pwd_edtv"
                android:layout_marginLeft="40px"
                android:layout_marginTop="27px"
                android:gravity="center"
                android:text="确认新密码 : "
                android:textColor="@color/black"
                android:textSize="24px" />

            <EditText
                android:id="@+id/again_new_pwd_edtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_pwd_edtv"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:layout_toRightOf="@id/again_new_pwd_tv"
                android:background="@drawable/shape_rounded_rectangle_black_border"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="10px"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="22px"
                android:maxLength="16"/>

            <TextView
                android:id="@+id/hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/again_new_pwd_edtv"
                android:layout_below="@id/again_new_pwd_edtv"
                android:layout_marginTop="10px"
                android:text="*密码由6-16位字母、数字和符号组成"
                android:textColor="@color/black"
                android:textSize="18px" />

            <TextView
                android:id="@+id/cancle_btn"
                android:layout_width="150px"
                android:layout_height="48px"
                android:layout_alignLeft="@id/again_new_pwd_edtv"
                android:layout_below="@id/hint_tv"
                android:layout_marginTop="20px"
                android:background="@drawable/change_pwd_cancle_btn_bg"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/black"
                android:textSize="24px" />

            <TextView
                android:id="@+id/confirm_btn"
                android:layout_width="150px"
                android:layout_height="48px"
                android:layout_alignTop="@id/cancle_btn"
                android:layout_marginLeft="60px"
                android:layout_toRightOf="@id/cancle_btn"
                android:background="@drawable/change_pwd_confirm_btn_bg"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="24px" />


        </RelativeLayout>
    </RelativeLayout>
</layout>
