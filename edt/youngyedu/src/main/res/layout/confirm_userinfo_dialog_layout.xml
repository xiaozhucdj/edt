<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        >
        <RelativeLayout
            android:layout_width="540px"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded_rectangle_all_white"
            android:paddingTop="42px"
            android:paddingBottom="32px"
            android:paddingLeft="42px"
            android:paddingRight="42px"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:text="请确认您的用户信息是否正确"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:textColor="@color/gray_666666"
                android:text="姓名:xxxxxx"
                android:layout_below="@id/title_tv"
                android:layout_marginTop="40px"
                />
            <TextView
                android:id="@+id/school_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:textColor="@color/gray_666666"
                android:text="姓名:xxxxxx"
                android:layout_below="@id/name_tv"
                android:layout_marginTop="15px"
                />
            <TextView
                android:id="@+id/class_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:textColor="@color/gray_666666"
                android:text="班级:xxxxxx"
                android:layout_below="@id/school_tv"
                android:layout_marginTop="15px"
                />
            <TextView
                android:id="@+id/num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:textColor="@color/gray_666666"
                android:text="编号:xxxxxx"
                android:layout_below="@id/class_tv"
                android:layout_marginTop="15px"
                />
            <TextView
                android:id="@+id/confirm_btn"
                android:layout_width="196px"
                android:layout_height="44px"
                android:textSize="24px"
                android:text="用户身份正确"
                android:layout_below="@id/num_tv"
                android:textColor="@drawable/page_text_selector"
                android:background="@drawable/shop_btn_bg_selector"
                android:layout_marginTop="32px"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/cancle_btn"
                android:layout_width="196px"
                android:layout_height="44px"
                android:textSize="24px"
                android:text="不正确"
                android:layout_below="@id/num_tv"
                android:layout_toRightOf="@id/confirm_btn"
                android:textColor="@drawable/page_text_selector"
                android:background="@drawable/shop_btn_bg_selector"
                android:layout_marginTop="32px"
                android:layout_marginLeft="57px"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/local_pwd_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:textSize="20px"
                android:textColor="@color/gray_666666"
                android:padding="25px"
                android:layout_below="@id/num_tv"
                android:layout_marginTop="30px"
                android:background="@drawable/shape_rectangle_black_border"
                android:visibility="gone"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/start_use_btn"
                android:layout_width="match_parent"
                android:layout_height="44px"
                android:text="开始使用"
                android:textSize="22px"
                android:layout_below="@id/local_pwd_hint_tv"
                android:textColor="@drawable/page_text_selector"
                android:background="@drawable/shop_btn_bg_selector"
                android:gravity="center"
                android:layout_marginTop="30px"
                android:visibility="gone"
                />
        </RelativeLayout>
    </RelativeLayout>
</layout>
