<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent">

    <LinearLayout
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_rounded_rectangle_all_white"
        android:orientation="vertical"
        android:padding="30px">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="end"
            android:background="@null"
            android:src="@drawable/img_serachbook_cancel" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48px"
            android:gravity="center"
            android:text="您已拥有该图书"
            android:textColor="@color/text_color_black"
            android:textSize="30px"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_cancelAndConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="68px">


            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="200px"
                android:layout_height="48px"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40px"
                android:background="@drawable/bind_cancel_btn_bg"
                android:gravity="center"
                android:text="返回书城"
                android:textColor="@color/black"
                android:textSize="24px"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="200px"
                android:layout_height="48px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40px"
                android:background="@drawable/bind_confirm_btn_bg"
                android:gravity="center"
                android:text="阅读图书"
                android:textColor="@color/white"
                android:textSize="24px"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>