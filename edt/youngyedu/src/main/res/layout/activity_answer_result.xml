<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 标题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55px"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px">

            <ImageView
                android:id="@+id/btn_left"
                android:layout_width="28px"
                android:layout_height="28px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:clickable="true"
                android:onClick="back"
                android:src="@drawable/img_normal_fanhui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="答案详情"
                android:textColor="#000000"
                android:textSize="28px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:background="@color/black"
            android:paddingBottom="2px"
            android:paddingTop="2px">

            <TextView
                android:id="@+id/question_body_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_selector_white_blue"
                android:gravity="center"
                android:text="题干"
                android:textColor="@drawable/btn_text_color_selector_black_white"
                android:textSize="24px" />

            <TextView
                android:id="@+id/answer_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_selector_white_blue"
                android:gravity="center"
                android:text="答案"
                android:textColor="@drawable/btn_text_color_selector_black_white"
                android:textSize="24px" />

            <TextView
                android:id="@+id/analysis_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_selector_white_blue"
                android:gravity="center"
                android:text="解析"
                android:textColor="@drawable/btn_text_color_selector_black_white"
                android:textSize="24px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="4px"
                android:layout_height="24px"
                android:background="#ffd400" />

            <TextView
                android:id="@+id/question_type_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="提示文字"
                android:textColor="#333333"
                android:textSize="24px" />
        </LinearLayout>

        <com.yougy.anwser.QuestionAnswerContainer
            android:id="@+id/question_container"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginTop="15px"
            android:layout_weight="1"
            android:paddingLeft="30px"
            android:paddingRight="30px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/tv_start_answer"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_gravity="center"
            android:background="@drawable/btn_bg_selector_blue_white"
            android:clickable="true"
            android:gravity="center"
            android:onClick="back"
            android:text="关闭"
            android:textColor="@drawable/btn_text_color_selector_white_black"
            android:textSize="24px"
            android:layout_marginBottom="2px"
            />
    </LinearLayout>
</layout>
