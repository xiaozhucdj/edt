<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 标题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55px"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px">

            <ImageView
                android:id="@+id/btn_left"
                android:layout_width="28px"
                android:layout_height="28px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:clickable="true"
                android:onClick="back"
                android:src="@drawable/img_normal_fanhui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="答案详情"
                android:textColor="#000000"
                android:textSize="28px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:layout_marginTop="1px"
            android:background="@color/black"
            android:paddingBottom="2px"
            android:paddingTop="2px">

            <TextView
                android:id="@+id/question_body_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_selector_white_blue"
                android:gravity="center"
                android:text="题干"
                android:textColor="@drawable/btn_text_color_selector_black_white"
                android:textSize="24px" />

            <TextView
                android:id="@+id/answer_analysis_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_selector_white_blue"
                android:gravity="center"
                android:text="解答"
                android:textColor="@drawable/btn_text_color_selector_black_white"
                android:textSize="24px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="4px"
                android:layout_height="26px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:background="@drawable/bmp_bg_yellow" />

            <TextView
                android:id="@+id/question_type_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="30px"
                android:text="提示文字"
                android:textColor="#333333"
                android:textSize="24px" />
        </LinearLayout>

        <com.yougy.anwser.WriteableContentDisplayer
            android:id="@+id/content_displayer"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginTop="1px"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_chooese_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_chooese_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_error"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:button="@drawable/rb_result_selector"
                        android:onClick="onClick"
                        android:text=" 错误（x）"
                        android:textSize="28px" />

                    <RadioButton
                        android:id="@+id/rb_right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="200dp"
                        android:button="@drawable/rb_result_selector"
                        android:onClick="onClick"
                        android:text=" 正确（√）"
                        android:textSize="28px" />
                </RadioGroup>
            </LinearLayout>
        </FrameLayout>

        <com.frank.etude.pageable.PageBtnBar
            android:id="@+id/page_btn_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/black" />

        <TextView
            android:id="@+id/close_btn"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_gravity="center"
            android:layout_marginBottom="2px"
            android:background="@drawable/btn_bg_selector_blue_white"
            android:clickable="true"
            android:gravity="center"
            android:onClick="back"
            android:text="关闭"
            android:textColor="@drawable/btn_text_color_selector_white_black"
            android:textSize="24px" />
    </LinearLayout>
</layout>
