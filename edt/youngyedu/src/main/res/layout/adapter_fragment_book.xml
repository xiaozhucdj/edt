<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_book_itemL"
        android:layout_width="wrap_content"
        android:layout_height="348px"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_book_iconL"
            android:layout_width="222px"
            android:layout_height="288px"
            android:layout_marginBottom="20px"
            android:layout_marginTop="40px"
            android:background="@drawable/img_book_backgroud"
            android:paddingBottom="21px"
            android:paddingRight="21px"
            android:scaleType="fitXY"
            android:src="@drawable/book_adaper_item_icon_test_normal" />


        <ImageView
            android:id="@+id/img_book_save_l"
            android:layout_width="36px"
            android:layout_height="90px"
            android:layout_marginTop="40px"
            android:background="@null" />

        <TextView
            android:id="@+id/tv_book_save_l"
            android:layout_width="36px"
            android:layout_height="90px"
            android:layout_marginTop="40px"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="18px" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/img_delete_book_l"
            android:layout_alignRight="@id/img_book_iconL"
            android:layout_alignParentBottom="true"
            android:layout_width="52px"
            android:layout_height="52px"
            android:layout_marginBottom="41px"
            android:background="@null"
            android:layout_marginRight="21px"
            android:src="@drawable/img_delete_book_l" />


        <ImageView
            android:layout_marginTop="40px"
            android:visibility="gone"
            android:id="@+id/img_add_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:src="@drawable/note_add_iv_normal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_book_itemS"
        android:layout_width="wrap_content"
        android:layout_height="242px"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_book_iconS"
            android:layout_width="162px"
            android:layout_height="212px"
            android:layout_marginTop="30px"
            android:background="@drawable/img_book_backgroud_s"
            android:paddingBottom="11px"
            android:paddingRight="11px"
            android:scaleType="fitXY"
            android:src="@drawable/book_adaper_item_icon_test_normal" />

        <ImageView
            android:id="@+id/img_book_save_s"
            android:layout_width="36px"
            android:layout_height="90px"
            android:layout_marginTop="30px"
            android:background="@null" />

        <TextView
            android:id="@+id/tv_book_save_s"
            android:layout_width="36px"
            android:layout_height="90px"
            android:layout_marginTop="30px"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="18px" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_delete_book_s"
            android:layout_alignRight="@id/img_book_iconS"
            android:layout_alignParentBottom="true"
            android:layout_width="46px"
            android:layout_height="46px"
            android:background="@null"
            android:layout_marginBottom="11px"
            android:layout_marginRight="11px"
            android:src="@drawable/img_delete_book_s" />

    </RelativeLayout>
</FrameLayout>
