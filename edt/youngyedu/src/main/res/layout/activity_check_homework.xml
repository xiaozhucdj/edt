<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 标题-->
    <include layout="@layout/commcon_title_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:background="@color/black"
            android:paddingBottom="2px"
            android:paddingTop="2px">

            <TextView
                android:id="@+id/question_body_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_selector_white_blue"
                android:gravity="center"
                android:text="题干"
                android:textColor="@drawable/btn_text_color_selector_black_white"
                android:textSize="24px" />

            <!--<TextView
                android:id="@+id/answer_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@drawable/answer_detail_btn_bg_selector"
                android:gravity="center"
                android:text="答案"
                android:textColor="@drawable/answer_detail_btn_text_color_selector"
                android:textSize="24px" />-->

            <TextView
                android:id="@+id/analysis_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_selector_white_blue"
                android:gravity="center"
                android:text="解答"
                android:textColor="@drawable/btn_text_color_selector_black_white"
                android:textSize="24px" />
        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="horizontal">
            &lt;!&ndash;装饰色块&ndash;&gt;
            <View
                android:layout_width="4px"
                android:layout_height="24px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="2px"
                android:background="@drawable/bmp_bg_yellow" />
            &lt;!&ndash;题目类型&ndash;&gt;
            <TextView
                android:id="@+id/question_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="0px"
                android:text="题目类型xxx"
                android:textColor="@color/black"
                android:textSize="24px" />
        </LinearLayout>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/rl_answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="60px"
                android:layout_marginRight="60px">

                <com.yougy.anwser.ContentDisplayer
                    android:id="@+id/content_displayer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical">

        <!--1.4版本响应产品需求隐藏掉批改作业中题号角标，V2.0版本中实现调整功能（bug：574）-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_all_question_page"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"></android.support.v7.widget.RecyclerView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px">

            <LinearLayout
                android:id="@+id/tv_last_homework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/last_homework_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_shangyige" />

                <TextView
                    android:id="@+id/last_homework_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:gravity="center_vertical"
                    android:text="上一题"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/tv_next_homework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/next_homework_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="下一题"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/next_homework_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:src="@drawable/img_xiayige" />
            </LinearLayout>

        </RelativeLayout>


        <!--底部分页按钮栏-->
        <com.yougy.anwser.PageBtnBar
            android:id="@+id/page_btn_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="36px"
            android:orientation="horizontal" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_above="@+id/ll_control_bottom"
            android:background="#000000" />

        <LinearLayout
            android:id="@+id/ll_control_bottom"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_homework_check_option"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <LinearLayout
                    android:id="@+id/tv_homework_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/bmp_bg_blue"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/img_zhengque" />


                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/tv_homework_half_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/bmp_bg_blue"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/img_bandui" />

                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/tv_homework_error"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/bmp_bg_blue"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/img_cuowu" />

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/ll_check_again"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="3"
                android:background="@drawable/bmp_bg_blue"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_check_result"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_cuowu" />

                    <TextView
                        android:id="@+id/tv_check_result"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="top"
                        android:text="错误"
                        android:textColor="@color/white"
                        android:textSize="24sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/iv_check_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:text="重新批改"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </RelativeLayout>

            <!--android:textColor="@drawable/answer_detail_btn_text_color_selector"-->

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
