<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginTop="30dp"
            >
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/zl_black"
                android:text="作业记录"
                android:textSize="14dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:visibility="gone"
                />

            <com.inkscreen.will.utils.widget.MultiListView
                android:id="@+id/workrecordlv_id"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:cacheColorHint="#00000000"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:listSelector="@android:color/transparent"
                android:divider="@null"
                android:layout_height="wrap_content">
            </com.inkscreen.will.utils.widget.MultiListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            >
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radio_record_left_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="1"
                    android:textSize="13px"
                    android:textColor="@color/zl_white"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:checked="true"
                    android:button="@null"
                    android:background="@drawable/radio_bg"
                    android:visibility="gone"
                    />
                <RadioButton
                    android:id="@+id/radio_record_middle_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="2"
                    android:textSize="13px"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:checked="false"
                    android:button="@null"
                    android:background="@drawable/radio_bg"
                    android:visibility="gone"
                    />
                <RadioButton
                    android:id="@+id/radio_record_right_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="3"
                    android:textSize="13px"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:checked="false"
                    android:button="@null"
                    android:background="@drawable/radio_bg"
                    android:visibility="gone"
                    />

                <RadioButton
                    android:id="@+id/radio4_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="4"
                    android:textSize="13px"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:checked="false"
                    android:button="@null"
                    android:background="@drawable/radio_bg"
                    android:visibility="gone"
                    />
                <RadioButton
                    android:id="@+id/radio5_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="5"
                    android:textSize="13px"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:checked="false"
                    android:button="@null"
                    android:background="@drawable/radio_bg"
                    android:visibility="gone"
                    />


            </RadioGroup>


        </LinearLayout>
        <FrameLayout
            android:id="@+id/view_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="350dp"

                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_empty"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还没有作业记录"
                android:textSize="20px"
                />

            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
    <include
        android:id="@+id/layout_net_error"
        layout="@layout/layout_net_error"/>
</LinearLayout>
