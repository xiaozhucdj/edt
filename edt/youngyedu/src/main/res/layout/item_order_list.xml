<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="900px"
        android:layout_height="300px"
        android:background="@drawable/shape_rectangle_black_border"
        android:layout_marginTop="50px"
        >
        <ImageButton
            android:id="@+id/checkbox"
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_marginLeft="20px"
            android:background="@drawable/btn_check_select"
            android:layout_marginTop="15px"
            />
        <TextView
            android:id="@+id/order_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号:xxxxx"
            android:textSize="22px"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/checkbox"
            android:layout_marginLeft="20px"
            android:layout_marginTop="10px"
            />
        <TextView
            android:id="@+id/order_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单时间 : xxxxx"
            android:textSize="22px"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/order_num_tv"
            android:layout_marginLeft="20px"
            android:layout_marginTop="10px"
            />
        <TextView
            android:id="@+id/order_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态"
            android:textSize="24px"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="10px"
            />
        <View
            android:id="@+id/split_line_horizontal"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/black"
            android:layout_below="@id/checkbox"
            android:layout_marginTop="15px"
            />

        <ImageView
            android:id="@+id/book_cover_imv"
            android:layout_width="123px"
            android:layout_height="164px"
            android:layout_below="@id/split_line_horizontal"
            android:layout_marginTop="44px"
            android:background="@color/black"
            android:layout_marginLeft="20px"
            />
        <TextView
            android:id="@+id/book_name_tv"
            android:layout_width="236px"
            android:layout_height="64px"
            android:text="轻巧xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:textSize="26px"
            android:textColor="@color/black"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@id/book_cover_imv"
            android:layout_alignTop="@id/book_cover_imv"
            android:layout_marginLeft="15px"
            />

        <TextView
            android:id="@+id/book_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共X本"
            android:textSize="22px"
            android:textColor="@color/black"
            android:layout_alignLeft="@id/book_name_tv"
            android:layout_below="@id/book_name_tv"
            android:layout_marginTop="40px"
            />
        <View
            android:id="@+id/split_line_vertical1"
            android:layout_width="2px"
            android:layout_height="200px"
            android:layout_toRightOf="@id/book_name_tv"
            android:layout_below="@id/split_line_horizontal"
            android:layout_marginTop="25px"
            android:layout_marginLeft="25px"
            android:background="@color/black"
            />
        <LinearLayout
            android:id="@+id/price_layout"
            android:layout_width="240px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/split_line_vertical1"
            android:layout_below="@id/split_line_horizontal"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/order_total_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:textColor="@color/black"
                android:text="总额 : XXXX"
                android:layout_marginTop="84px"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/order_final_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:textColor="@color/black"
                android:text="应付 : XXXX"
                android:layout_marginTop="40px"
                android:maxLines="1"
                />
        </LinearLayout>
        <View
            android:id="@+id/split_line_vertical2"
            android:layout_width="2px"
            android:layout_height="200px"
            android:layout_toRightOf="@id/price_layout"
            android:layout_below="@id/split_line_horizontal"
            android:layout_marginTop="25px"
            android:background="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/split_line_vertical2"
            android:layout_below="@id/split_line_horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/pay_btn"
                android:layout_width="150px"
                android:layout_height="48px"
                android:text="支付"
                android:textColor="@color/white"
                android:textSize="24px"
                android:background="@drawable/btn_bg_round_rectangle_green_solid_150_48"
                android:layout_marginBottom="30px"
                android:gravity="center"
                android:visibility="visible"
                />
            <TextView
                android:id="@+id/cancle_btn"
                android:layout_width="150px"
                android:layout_height="48px"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="24px"
                android:background="@drawable/btn_bg_round_rectangle_gray_line_150_48"
                android:layout_marginBottom="30px"
                android:visibility="visible"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/delete_btn"
                android:layout_width="150px"
                android:layout_height="48px"
                android:text="删除订单"
                android:textColor="@color/black"
                android:textSize="24px"
                android:background="@drawable/btn_bg_round_rectangle_gray_line_150_48"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>
</layout>
