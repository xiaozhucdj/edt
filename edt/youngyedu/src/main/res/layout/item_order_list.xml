<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>
    <com.yougy.shop.activity.OrderListItem xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:tag="layout/item_order_list_0">
        <TextView
            android:id="@+id/order_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_marginLeft="30px"
            android:text="订单编号"
            android:textSize="24px"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/order_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单金额"
            android:textColor="@color/gray_666666"
            android:textSize="20px"
            android:layout_alignLeft="@id/order_num_tv"
            android:layout_below="@id/order_num_tv"
            android:layout_marginTop="15px"
            />
        <TextView
            android:id="@+id/order_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单时间"
            android:textColor="@color/gray_666666"
            android:textSize="20px"
            android:layout_alignLeft="@id/order_price_tv"
            android:layout_below="@id/order_price_tv"
            android:layout_marginTop="15px"
            android:layout_marginBottom="30px"
            />
        <TextView
            android:id="@+id/cancle_btn"
            android:layout_width="110px"
            android:layout_height="48px"
            android:text="取消"
            android:textSize="24px"
            android:textColor="@drawable/btn_text_color_selector"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:background="@drawable/shop_btn_bg_selector"
            />
        <TextView
            android:id="@+id/pay_btn"
            android:layout_width="110px"
            android:layout_height="48px"
            android:text="支付"
            android:textSize="24px"
            android:textColor="@drawable/btn_text_color_selector"
            android:gravity="center"
            android:layout_toLeftOf="@id/cancle_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:background="@drawable/shop_btn_bg_selector"
            />
        <TextView
            android:id="@+id/finish_btn"
            android:layout_width="110px"
            android:layout_height="48px"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:layout_toLeftOf="@+id/order_status_tv"
            android:background="@drawable/shop_btn_bg_selector"
            android:gravity="center"
            android:text="完成"
            android:textColor="@drawable/btn_text_color_selector"
            android:textSize="24px" />
        <TextView
            android:id="@id/order_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textSize="24px"
            android:textColor="@color/gray_666666"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            />
        <View
            android:id="@+id/separator_line"
            android:layout_width="match_parent" android:layout_height="2px" android:background="@color/black"
            android:layout_below="@id/order_time_tv"
            />
    </com.yougy.shop.activity.OrderListItem>
</layout>
