<resources>

    <!-- Base application theme. -->
    <style name="bookDetailStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20px</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="bookPromotionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20px</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="bookOperateStyle">
        <item name="android:layout_width">200px</item>
        <item name="android:layout_height">48px</item>
        <item name="android:background">@drawable/btn_selector_rectangle_white_green_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/shop_color_btn_selector</item>
        <item name="android:textSize">24px</item>
        <item name="android:layout_marginRight">32px</item>
    </style>

    <style name="classfyTextStyle">
        <item name="android:layout_height">@dimen/classify_text_height</item>
        <item name="android:layout_width">@dimen/classify_text_width</item>
        <item name="android:textSize">@dimen/classify_text_size</item>
        <item name="android:textColor">@drawable/classify_color_selector</item>
        <item name="android:background">@drawable/classify_bg_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="shopImgStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/shop_img_padding</item>
        <item name="android:paddingRight">@dimen/shop_img_padding</item>
    </style>

    <style name="bottomBtnStyle">
        <item name="android:layout_width">350px</item>
        <item name="android:layout_height">70px</item>
        <item name="android:background">@drawable/search_click_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24px</item>
        <item name="android:textColor">@drawable/classify_color_selector</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
